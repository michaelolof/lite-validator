.home .hero img
  max-width 450px!important

.demo-section 
  width: 490px;
  max-width: 490px;

.form
  width: 450px;
  max-width: 450px;
  background-color: beige;
  padding: 20px;

  &__section
    margin-bottom: 25px;

  &__input, &__label, &__submit, &__clear, &__error
    font-size: 16px;
    display: block;

  &__label
    margin-bottom: 8px;
    font-weight: 500;

  &__input
    padding: 8px 12px;
    width: 100%;
    box-sizing: border-box;

  &__submit, &__clear
    padding: 8px 35px;
    border: none;
    cursor: pointer;

  &__submit
    background-color: #3eaf7c;
    color: #ffffff;

  &__clear
    background-color: #ffffff;
    color: #000000
    border: solid 1px #E2E2E2;

  &__error
    font-size: 14px;
    color: red;
    margin-top: 5px;

  &__notification
    padding: 14px 10px;

    &--pass
      background-color: #4BB543;
      color: #ffffff;
    
    &--fail
      background-color: #FF6600;
      color: #fff;


.flex 
  display: flex;
  
  &--between
    justify-content: space-between;

  &--reverse
    flex-direction: row-reverse


.toggle-btn
  margin-bottom: 6px;